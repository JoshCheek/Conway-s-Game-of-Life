#!/usr/bin/env watchr

def run_test
  system  'rspec '                  +
          '--color '                +
          '--format=documentation ' +
          'spec/spec.rb'
  puts "-" * 20 + "\n\n"
end

run_test

watch '^.*\.rb$' do
  run_test  
end

# --------------------------------------------------
# Signal Handling
# --------------------------------------------------
Signal.trap('QUIT') { ruby tests } # Ctrl-\
Signal.trap('INT' ) { abort "\n" } # Ctrl-C

